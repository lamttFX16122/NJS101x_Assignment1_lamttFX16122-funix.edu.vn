<%- include('../includes/head.ejs')%>
    <%- include('../includes/sidebar.ejs')%>
        <%- include('../includes/navbar.ejs')%>
            <!-- Content -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-12">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h5 class="mb-4">Thông Tin Cá Nhân</h5>
                            <div class="mb-3">
                                <p>Mã nhân viên:
                                    <%=user._id%>
                                </p>
                            </div>
                            <div class="mb-3">
                                <p>Họ tên:
                                    <%=user.name%>
                                </p>
                            </div>
                            <div class="mb-3">
                                <p>Ngày sinh:
                                    <%=moment(user.doB).format('DD-MM-YYYY')%>
                                </p>
                            </div>

                            <div class="mb-3">
                                <p>Mức lương:
                                    <%=user.salaryScale%>
                                </p>
                            </div>

                            <div class="mb-3">
                                <p>Ngày bắt đầu:
                                    <%=moment(user.startDate).format('DD-MM-YYYY')%>
                                </p>
                            </div>

                            <div class="mb-3">
                                <p>Phòng ban:
                                    <%=user.department%>
                                </p>
                            </div>
                            <div class="mb-3">
                                <p>Số ngày nghỉ còn lại:
                                    <%=parseHour(user.annualLeave,1)%>
                                </p>
                            </div>

                            <div class="mb-3">
                                <p>Ảnh:
                                    <img class="rounded-circle me-lg-2" src="<%=user.imageUrl%>" alt="" style="width: 80px; height: 80px;">
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                        Sửa
                                    </button>
                                </p>
                            </div>

                            <!-- <form action="/add-user" method="POST">
                                <div class="mb-3">
                                    <label for="imageUrl" class="form-label">Hình ảnh</label>
                                    <input type="text" class="form-control" id="imageUrl" name="imageUrl">
                                </div>
                                <button type="submit" class="btn btn-primary">Thêm</button>
                            </form> -->
                            <!-- --------------------------------- -->



                            <!-- Modal -->
                            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title text-info" id="staticBackdropLabel">Thay đổi hình ảnh</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <form action="/change-image" method="POST">
                                            <div class="modal-body">

                                                <div class="mb-3">
                                                    <label for="imageUrl" class="form-label">Hình ảnh</label>
                                                    <input type="text" class="form-control bg-white" id="imageUrl" name="imageUrl">
                                                </div>

                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                <button type="submit" class="btn btn-primary">Sửa</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <!-- ------------------------------------------------------- -->
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Content -->
            <%- include('../includes/footer.ejs')%>
                <%- include('../includes/end.ejs')%>