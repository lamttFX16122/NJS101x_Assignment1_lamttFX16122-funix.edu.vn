<%- include('../includes/head.ejs')%>
    <%- include('../includes/sidebar.ejs')%>
        <%- include('../includes/navbar.ejs')%>
            <!-- Content -->
            <div class="container-fluid pt-4 px-4">
                <div class="row min-vh-100 bg-secondary rounded align-items-start justify-content-center mx-0">

                    <!-- Đăng ký nghỉ -->
                    <form action="/annualLeave" method="POST">
                        <div class="col-sm-6 col-xl-12 p-4">
                            <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                                <div class="ms-3">
                                    <label for="annualLeave" class="form-label">Số giờ</label>
                                    <input type="number" min="0" max="8" class="form-control" id="annualLeave" value="0" name="numhours">
                                </div>
                                <div class="ms-3">
                                    <label for="startDate" class="form-label">Từ ngày</label>
                                    <input type="date" value="<%=moment().format('YYYY-MM-DD')%>" class="form-control" id="startDate" name="startDate">
                                </div>
                                <div class="ms-3">
                                    <label for="endDate" class="form-label">Đến ngày</label>
                                    <input type="date" class="form-control" value="<%=moment().format('YYYY-MM-DD')%>" id="endDate" name="endDate">
                                </div>
                                <div class="ms-3">
                                    <input type="hidden" value="" name="txt_id_annual" id="txt_id_annual">
                                    <button class="btn btn-success" id="annual-submit" type="submit"> Đăng ký </button>
                                    <button class="btn btn-primary" id="annual-clear" type="button"> Hủy </button>
                                </div>

                            </div>
                            <div class="p-6">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Leave a comment here" name="cause" id="floatingTextarea" style="height: 100px;"></textarea>
                                    <label for="floatingTextarea">Lý do</label>
                                </div>
                            </div>
                        </div>
                    </form>

                    <!-- Table Danh sách điểm danh -->
                    <hr>
                    <p>Tổng số ngày nghỉ đã đăng ký:
                        <%=parseHour(totalAnnual,1)%>
                    </p>
                    <p>Tổng số ngày nghỉ còn lại:
                        <%=parseHour(remainingAnnual,1)%>
                    </p>
                    <hr>
                    <h5 class="mb-4">Danh sách đăng ký nghỉ năm
                        <%=annualLeave.year%>
                    </h5>

                    <div class="table-responsive">

                        <table class="table table-hover tbl-annual">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Thời gian nghỉ</th>
                                    <th scope="col">Từ ngày</th>
                                    <th scope="col">Đến ngày</th>
                                    <th scope="col">Lý do</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <%let count=0%>
                                    <%annualLeave.yearItems.sort((a,b)=>b.month-a.month).forEach((value) => {%>
                                        <tr>
                                            <th scope="row" colspan="6">Tháng
                                                <%=value.month%>
                                            </th>
                                            <%count++%>
                                        </tr>
                                        <%value.regAnnualleave.dayOff.forEach((x, index) => {%>
                                            <tr>
                                                <%count++%>
                                                    <th scope="row">
                                                        <%=index+1%>
                                                    </th>
                                                    <td id="<%=x.numOfHours%>">
                                                        <%=parseHour(x.numOfHours, 1)%>
                                                    </td>
                                                    <td id="<%=x.startDay%>">
                                                        <%=moment(x.startDay).format('DD/MM/YYYY')%>
                                                    </td>
                                                    <td id="<%=x.endDay%>">
                                                        <%=moment(x.endDay).format('DD/MM/YYYY')%>
                                                    </td>
                                                    <td>
                                                        <%=x.cause%>
                                                    </td>
                                                    <td id="<%=x._id%>">
                                                        <%if( moment(x.startDay) > moment()){%>
                                                            <div class="d-flex justify-content-end">
                                                                <button type="button" class="btn btn-info btn-edit-annual mx-2" id="<%=count-1%>">Sửa</button>
                                                                <form action="/remove-annual" method="POST">
                                                                    <input type="hidden" value="<%=x._id%>" name="remove_annual">
                                                                    <button type="submit" class="btn btn-primary btn-remove_annual">Xóa</button>
                                                                </form>
                                                            </div>
                                                            <%}%>

                                                    </td>
                                            </tr>
                                            <%})%>
                                                <%})%>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
            <!-- End Content -->
            <%- include('../includes/footer.ejs')%>
                <%- include('../includes/end.ejs')%>